# Lootly eBay MCP Server Configuration
# Copy this file to .env and fill in your actual values

# eBay API Credentials (get from eBay Developer Portal)
# Get this from https://developer.ebay.com/ after creating an application
EBAY_APP_ID=your-app-id-here

# Required for Trading API (optional for Finding/Shopping/Merchandising APIs)
EBAY_CERT_ID=your-cert-id-here
EBAY_DEV_ID=your-dev-id-here

# eBay API Settings
# Use 'true' for sandbox (testing) or 'false' for production
EBAY_SANDBOX_MODE=true

# eBay site to use (default: EBAY-US)
# Other options: EBAY-UK, EBAY-DE, EBAY-AU, etc.
EBAY_SITE_ID=EBAY-US

# eBay API Version and Configuration
EBAY_API_VERSION=1.13.0
EBAY_LOG_LEVEL=INFO

# Lootly Server Configuration
LOOTLY_TRANSPORT=stdio      # Options: stdio, sse, streamable-http
LOOTLY_HOST=127.0.0.1       # Host for network transports (sse, http)
LOOTLY_PORT=8000           # Port for network transports

# API Performance Settings
EBAY_CACHE_TTL=300          # Cache time-to-live in seconds (5 minutes)
EBAY_MAX_RETRIES=3          # Maximum API retry attempts
EBAY_TIMEOUT=30             # API request timeout in seconds
EBAY_PAGE_SIZE=50           # Default page size for listings
EBAY_MAX_PAGES=10           # Maximum pages to fetch

# Integration Testing (set to true to run integration tests)
EBAY_RUN_INTEGRATION_TESTS=false

# Optional: Enable for debugging/development
# LOOTLY_DEBUG_MODE=false