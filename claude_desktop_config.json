{
  "mcpServers": {
    "lootly": {
      "command": "uv",
      "args": ["run", "lootly"],
      "cwd": "/path/to/lootly",
      "env": {
        "EBAY_APP_ID": "your-ebay-app-id-here",
        "EBAY_CERT_ID": "your-ebay-cert-id-here",
        "EBAY_DEV_ID": "your-ebay-dev-id-here",
        "EBAY_SANDBOX_MODE": "true",
        "EBAY_SITE_ID": "EBAY-US"
      }
    }
  }
}